<%= form_for(@pic, url: pics_path) do |f| %>
<% if @pic.errors.any? %>
<div id="error_expanation">
    <h3><%= @pic.errors.count %>件のエラーがあります</h3>

    <ul>
        <% @pic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>

<%= f.label :タイトル %>
<%= f.text_field :title, class: 'form-control' %>
<br>

<%= f.label :写真 %>
<%= f.file_field :image, class: 'center-block' %>
<br>

<%= f.label :内容 %>
<%= f.text_field :content, class: 'form-control'%>
<br>
<%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>


<%= link_to "ブログ一覧画面に戻る", pics_path %>
